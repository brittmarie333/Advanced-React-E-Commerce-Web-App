{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "node",   // Use 'node' resolution for modules
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "types": ["jest", "node"],   // Add Jest types
    "esModuleInterop": true,      // Allow imports to work with CommonJS modules
    "resolveJsonModule": true,    // Enable import of JSON files
    "isolatedModules": true,
    "noEmit": true,               // Prevent emitting files (useful for testing)
    "moduleDetection": "force",
    "allowImportingTsExtensions": true
  },
  "include": [
    "src/**/*",
    "src/setupTests.ts"   // Ensure setupTests is included for Jest-DOM setup
  ]
}
